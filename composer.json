{
  "name": "oiradio/endolang",
  "description": "",
  "authors": [
    {
      "name": "yuhei yoshida",
      "email": "yahiru1121@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1 | ^8.2 | ^8.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v3.0",
    "infection/infection": "^0.26",
    "jangregor/phpstan-prophecy": "^1.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/phpstan": "^1.9",
    "phpstan/phpstan-phpunit": "^1.3",
    "phpunit/phpunit": "^9.0",
    "symfony/var-dumper": "^6.0",
    "vimeo/psalm": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "OiRadio\\Endolang\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "OiRadio\\Endolang\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "phpunit"
    ],
    "tests": [
      "@cs",
      "@stan",
      "@psalm",
      "@test"
    ],
    "coverage": [
      "php -d pcov.directory=. -d pcov.exclude=./tests ./vendor/bin/phpunit --coverage-html=build/coverage --coverage-text"
    ],
    "infection": "infection --git-diff-filter=A --git-diff-base=origin/main --ignore-msi-with-no-mutations",
    "cs": "php-cs-fixer fix -v --dry-run",
    "cs-fix": "php-cs-fixer fix -v",
    "stan": "phpstan analyse --no-progress",
    "psalm": "psalm"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
